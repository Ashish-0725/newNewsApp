<%-include("../partials/header.ejs") %>
<div class="container text-center">
<h1 class="mt-5">Edit your details</h1>
<form method="post" action="/admin/dashboard/viewUsers/editUser/<%=user._id%>">

  <div class="form-group row justify-content-center mt-5">
    <label for="fname" class="col-sm-2 col-form-label"> First Name : </label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="fname" name="fname" placeholder="First Name" value="<%=user.firstName%>">
    </div>
  </div>

  <div class="form-group row justify-content-center mt-2">
    <label for="lname" class="col-sm-2 col-form-label"> Last Name : </label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="lname" name="lname" placeholder="Last Name" value="<%=user.lastName%>">
    </div>
  </div>

  <div class="form-group row justify-content-center mt-2">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-4">
      <input type="email" class="form-control" name="username" id="inputEmail3" placeholder="Email" value="<%=user.username%>">
    </div>
  </div>



  <div class="form-group row justify-content-center mt-4">
    <div class="col-sm-4">
      <button type="submit" class="btn btn-primary">Submit Changes</button>
    </div>
  </div>
</form>
</div>
<%-include("../partials/footer.ejs") %>
