<%-include("../partials/header.ejs") %>
<h1 class="text-center">All the Articles </h1>

<%articles.forEach(function(article){%>
<div class="container articleCon ">
  <div class="row ">
    <div class="col-10">
      <a href="/admin/dashboard/viewArticles/<%=article._id%>" class="article" style="text-decoration: none; color: black">
        <h1><%=article.title%></h1>
      </a>
      <p><%=article.content.substr(0,100)%>...<a href="/admin/dashboard/viewThisArticle/<%=article._id%>">Read More</a></p>
    </div>
    <div class="col-2 text-center">
      <a href="/admin/dashboard/viewArticles/<%=article._id%>">
        <img src="/uploadFolder/<%=article.image%>" alt="article-pic" width="100px" height="80px">
      </a>
    </div>
  </div>
</div>
<hr>
<%})%>
<p class="mb-5 pb-5"></p>
<%-include("../partials/footer.ejs") %>
