<%-include("../partials/header.ejs") %>
<div class="container text-center">
<h1 class="mt-5">Add your Article Here ! </h1>
<form method="post" action="/admin/dashboard/addArticle" enctype="multipart/form-data">

  <div class="form-group row justify-content-center mt-5">
    <label for="title" class="col-sm-2 col-form-label"> Title : </label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="title" name="title" placeholder="title of your article">
    </div>
  </div>

  <div class="form-group row justify-content-center mt-2">
    <label for="content" class="col-sm-2 col-form-label"> Content : </label>
    <div class="col-sm-8">
      <textarea name="content" class="form-control" id="content" placeholder="content of the addArticle" rows="8" cols="80"></textarea>
    </div>
  </div>

  <div class="form-group row justify-content-center mt-2">
    <label for="image" class="col-sm-2 col-form-label"> Image : </label>
    <div class="col-sm-8">
      <input type="file" class="form-control" id="image" name="image">
    </div>
  </div>



  <div class="form-group row justify-content-center mt-4">
    <div class="col-sm-6">
      <button type="submit" class="btn btn-secondary btn-lg">Add</button>
    </div>
  </div>
</form>
</div>
<%-include("../partials/footer.ejs") %>
